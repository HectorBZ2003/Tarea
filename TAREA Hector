    <script>
        // Variables globales
        let userName = "";
        
        // Función para mostrar secciones
        function showSection(sectionId) {
            // Ocultar todas las secciones
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Mostrar la sección seleccionada
            document.getElementById(sectionId).classList.add('active');
            
            // Ejecutar funcionalidades específicas de cada sección
            if (sectionId === 'pagina2') {
                checkAge();
            }
        }
        
        // Página 1 - Funcionalidades
        function welcomeUser() {
            alert("¡Bienvenido a la prueba JavaScript!");
            
            // Solicitar nombre del usuario
            userName = prompt("Para personalizar tu experiencia, por favor, ingresa tu nombre:");
            
            // Mostrar mensaje de bienvenida personalizado
            if (userName && userName.trim() !== "") {
                alert(`¡Bienvenido/a de nuevo, ${userName}!`);
                document.getElementById('user-name-display').textContent = userName;
            } else {
                alert("¡Bienvenido/a de nuevo, Usuario!");
                document.getElementById('user-name-display').textContent = "Usuario";
            }
        }
        
        // Página 2 - Funcionalidades
        function checkAge() {
            let age = prompt("Por favor, ingresa tu edad:");
            
            if (age !== null && age !== "") {
                let ageNum = parseInt(age);
                let message = "";
                
                if (ageNum > 20) {
                    message = `Tienes ${ageNum} años, eres mayor de 20 años.`;
                } else {
                    message = `Tienes ${ageNum} años, eres menor o igual a 20 años.`;
                }
                
                document.getElementById('age-message').textContent = message;
            }
        }
        
        // Página 3 - Funcionalidades
        function multiplicar() {
            alert("Vamos a multiplicar dos números");
            let num1 = parseFloat(prompt("Ingresa el primer número:"));
            let num2 = parseFloat(prompt("Ingresa el segundo número:"));
            
            if (!isNaN(num1) && !isNaN(num2)) {
                let resultado = num1 * num2;
                alert(`El resultado de ${num1} × ${num2} es: ${resultado}`);
            } else {
                alert("Por favor, ingresa números válidos.");
            }
        }
        
        function elevarCuadrado() {
            alert("Vamos a elevar un número al cuadrado");
            let num = parseFloat(prompt("Ingresa el número:"));
            
            if (!isNaN(num)) {
                let resultado = num * num;
                alert(`El resultado de ${num}² es: ${resultado}`);
            } else {
                alert("Por favor, ingresa un número válido.");
            }
        }
        
        function restar() {
            alert("Vamos a restar dos números");
            let num1 = parseFloat(prompt("Ingresa el primer número:"));
            let num2 = parseFloat(prompt("Ingresa el segundo número:"));
            
            if (!isNaN(num1) && !isNaN(num2)) {
                let resultado = num1 - num2;
                alert(`El resultado de ${num1} - ${num2} es: ${resultado}`);
            } else {
                alert("Por favor, ingresa números válidos.");
            }
        }
        
        // Inicialización cuando se carga la página
        window.onload = function() {
            welcomeUser();
        };
    </script>
</body>
